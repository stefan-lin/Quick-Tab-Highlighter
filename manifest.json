{
  "manifest_version": 2,
  "name": "TabHighlighter",
  "short_name": "TabHighlighter",
  "description": "Chrome extension that helps user to highlight specific pages.",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "chrome://favicon/",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action":{
    "default_icon": "assets/devil.png",
    "default_popup": "popup.html",
    "default_title": "Tab Highlighter"
  },

  "content_scripts":[{
    "js": [ "js/app/content.js" ],
    "matches": ["<all_urls>"]
    //"css": [ "css/styles.css" ],
    //"matches": [ "http://*/*", "https://*/*"]
    //"all_frames": true
  }],

  "background": {
    "scripts": ["js/app/background.js"],
    "persistent": false
  }
}
